<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.marcos.mybrotherhoodapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main2"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DetailsGridActivity"
            android:label="@string/title_image"></activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_login"></activity>
        <activity
            android:name=".AddEditSuggestionActivity"
            android:label="@string/title_add_edit"></activity>
        <activity
            android:name=".SuggestionDetailActivity"
            android:label="@string/title_suggestion"></activity>
    </application>

</manifest>